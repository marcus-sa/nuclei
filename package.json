{
  "private": true,
  "scripts": {
    "precommit": "pretty-quick --staged",
    "commit": "git-cz",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "lint": "ts-lint -p tsconfig.json -c tslint.json",
    "bootstrap": "lerna bootstrap",
    "test": "jest",
    "prepublish": "yarn test && lerna run prepare",
    "clean": "rimraf packages/**/lib",
    "examples:core": "node example.cli.js --example core",
    "examples:circular": "node example.cli.js --example circular",
    "examples:electron": "node example.cli.js --example core --watch core,electron",
    "pretty-quick": "pretty-quick"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^8.0.28",
    "git-cz": "^1.7.1",
    "husky": "^0.14.3",
    "jest": "23.1.0",
    "lerna": "^2.9.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "ts-jest": "22.4.6",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "typescript": "^3.0.1",
    "yargs": "^12.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "moduleNameMapper": {
      "@nuclei/(.*)": "<rootDir>/packages/$1/src"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/packages/*/__tests__/**/*.(spec|test).+(ts|tsx|js)"
    ]
  }
}
