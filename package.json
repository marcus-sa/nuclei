    "git-cz": "^1.7.1",
    "husky": "^0.14.3",
    "jest": "23.1.0",
    "lerna": "^2.9.0",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.6.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.2",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-node-resolve": "^3.4.0",
