{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "prepublish": "npm run test && lerna run prepare",
    "precommit": "npm run test",
    "clean": "rimraf packages/**/lib"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^8.0.28",
    "jest": "^23.5.0",
    "lerna": "^2.9.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "typescript": "^2.8.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "useExperimentalLanguageServer": true,
    "moduleFileExtensions": [
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/packages/*/__tests__/**/*.(spec|test).+(ts|tsx|js)"
    ],
    "transformIgnorePatterns": [
      "<rootDir>.*(node_modules)(?!.*@nuclei/core.*).*$"
    ]
  }
}
